{
    "name": "root/samknows",
    "description": "Back end technical test for SamKnows.",
    "autoload": {
        "psr-4": {
            "SamKnows\\": "app/"
        }
    },
    "authors": [
        {
            "name": "Nathan Daly",
            "email": "justlikephp@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "behat/behat": "^3.3"
    },
    "minimum-stability": "dev",
    "require": {
        "doctrine/orm": "2.7.x-dev",
        "guzzlehttp/guzzle": "^6.3",
        "klein/klein": "^2.1",
        "php-di/php-di": "dev-master",
        "symfony/console": "^4.1@dev",
        "vlucas/phpdotenv": "^2.5@dev"
    },
    "scripts": {
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
